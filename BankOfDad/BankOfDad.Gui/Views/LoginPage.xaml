<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BankOfDad.Gui.Views.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout Padding="10" VerticalOptions="Center" HorizontalOptions="Center">
        <VerticalStackLayout Padding="10">
            <Label Text="Login" FontSize="30" FontAttributes="Bold" Padding="5"/>
            <Label Text="Username" Margin="0,20,0,0" />
            <Entry x:Name="Username" Text="{Binding Email,Mode=TwoWay}"  Margin="5" Placeholder="Username" />
            <Label Margin="0,20,150,0" Text="Password" />
            <Entry x:Name="Password" Text="{Binding Password,Mode=TwoWay}" Margin="5" Placeholder="Password" IsPassword="True" />
            <Button Margin="0,20,0,0" x:Name="LoginButton" Clicked="LoginButton_Clicked" Text="Login" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>