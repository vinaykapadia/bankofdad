<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BankOfDad.Gui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BankOfDad.Gui"
    xmlns:views="clr-namespace:BankOfDad.Gui.Views"
    Shell.FlyoutBehavior="Disabled">

    <!--Main Page-->
    <TabBar>
        <Tab Title="Home" Icon="piggybank.svg">
            <ShellContent
                Icon="piggybank.svg"
                Title="Home"
                ContentTemplate="{DataTemplate views:HomePage}"
                Route="home" />

        </Tab>
        <Tab Title="Transaction" Icon="cash.svg">
            <ShellContent
                Icon="cash.svg"
                Title="Transaction"
                ContentTemplate="{DataTemplate views:TransactionPage}"
                Route="transaction" />
        </Tab>
    </TabBar>

    <!--Login Page-->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="login"/>

</Shell>
